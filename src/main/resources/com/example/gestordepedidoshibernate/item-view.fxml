<VBox id="fondo" prefHeight="345.0" prefWidth="450.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gestordepedidoshibernate.controller.ItemViewController">
   <children>
      <MenuBar id="menuBar">
        <menus>
          <Menu id="txtMenu" mnemonicParsing="false" text="File">
            <items>
              <MenuItem id="txtItem" mnemonicParsing="false" onAction="#salir" text="Salir" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem id="txtItem" mnemonicParsing="false" onAction="#mostrarAcercaDe" text="Acerca de " />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem id="txtItem" mnemonicParsing="false" onAction="#volverAtras" text="Atrás" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <top>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Cantidad de Items en el pedifo:">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label fx:id="labelInfoCantidad" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="50.0" />
               </BorderPane.margin>
            </VBox>
         </top>
         <center>
            <GridPane BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Cantidad" GridPane.halignment="RIGHT">
                     <GridPane.margin>
                        <Insets right="20.0" />
                     </GridPane.margin>
                  </Label>
                  <Label text="Producto" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets right="20.0" />
                     </GridPane.margin>
                  </Label>
                  <Spinner fx:id="spCantidad" prefHeight="22.0" prefWidth="157.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
                  <ComboBox fx:id="comboProducto" prefHeight="22.0" prefWidth="157.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
               </children>
            </GridPane>
         </center>
      </BorderPane>
      <FlowPane alignment="CENTER">
         <children>
            <Button id="otrosBtn" mnemonicParsing="false" onAction="#add" text="Añadir">
               <FlowPane.margin>
                  <Insets bottom="5.0" top="5.0" />
               </FlowPane.margin>
               <padding>
                  <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
               </padding>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </FlowPane>
   </children>
